% Take a comma separated list "a,b,c" and transform it into "T_{a},T_{b},T_{c}"
\newcommand{\@transactionize}[1]{%
    \@tempswafalse
    \@for\next:=#1\do
    {\if@tempswa\else\@tempswatrue\fi{$T_{\mathit{\next}}$}}
}
\newcommand{\transactionize}[1]{%
    \foreach \next [count=\ni] in {#1} {%
        \ifnum\ni=1%
            $T_{\next}$%
        \else%
            ,$T_{\next}$%
        \fi%
    }%
}
